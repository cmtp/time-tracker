 
{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "globals": {
        "document": true,
        "it": true,
        "window": true
    },
    "rules": {
        "arrow-parens": "off",
        "comma-dangle": "off",
        "function-paren-newline":"off",
        "max-len": [1, 120],
        "no-param-reassign": "off",
        "react/require-default-props": "off",
        "linebreak-style":"off",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/jsx-one-expression-per-line": "off",
        "react/destructuring-assignment": "off"
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true,
            "jsx": true,
            "arrowFunctions": true,
            "classes": true
        }
    }
}